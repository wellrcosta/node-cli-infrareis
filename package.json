{
  "name": "reis-cli",
  "version": "0.1.0",
  "description": "Fast Node+TS project scaffolder with presets, DBs and plug-and-play features",
  "type": "module",
  "bin": {
    "reis-cli": "./dist/bin.js",
    "create-app": "./dist/bin.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/bin.ts create",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/bin.js create",
    "prepublishOnly": "npm run build",
    "test": "echo \"(opcional) adicione tests do CLI aqui\""
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.3.6",
    "ora": "^8.0.1",
    "simple-update-notifier": "^2.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^22.5.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
